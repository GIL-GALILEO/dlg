<%= form_tag search_action_url, method: :get, class: 'search-query-form', role: 'search' do %>
  <%= render_hash_as_hidden_fields(search_state.params_for_search.except(:q, :search_field, :qt, :page, :utf8)) %>
  <div class="input-group input-group-lg">
    <%= text_field_tag :q, params[:q], placeholder: search_bar_placeholder , class: 'search_q q form-control', id: 'q', autofocus: should_autofocus_on_search_box?, data: { autocomplete_enabled: autocomplete_enabled?, autocomplete_path: blacklight.suggest_index_path }, aria: { label: t('blacklight.search.form.search.sr_label') } %>
    <%= hidden_field_tag :search_field, search_fields.first.last %>
    <span class="input-group-btn">
      <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
    </span>
  </div>
<% end %>
