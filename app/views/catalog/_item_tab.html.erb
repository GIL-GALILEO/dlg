<div id="item" class="tab-pane fade" role="tabpanel" aria-labelledby="item-tab">
  <div id="osd-toolbar" style="margin-bottom: 10px;">
    <div class="btn-toolbar" role="toolbar" aria-label="Image viewer Controls">
      <div class="btn-group btn-group-sm" role="group" aria-label="Pagination controls">
        <button class="btn btn-primary" type="button" id="osd-previous-page">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          Previous Page
        </button>
        <button class="btn btn-primary" type="button" id="osd-next-page">
          Next Page
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        </button>
      </div>
      <div class="btn-group btn-group-sm" role="group" aria-label="Zoom controls">
        <button class="btn btn-primary" type="button" id="osd-zoom-in">
          <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
          <span class="sr-only">Zoom In</span>
        </button>
        <button class="btn btn-primary" type="button" id="osd-zoom-out">
          <span class="glyphicon glyphicon-zoom-out" aria-hidden="true"></span>
          <span class="sr-only">Zoom Out</span>
        </button>
      </div>
      <div class="btn-group btn-group-sm" role="group" aria-label="Visibility controls">
        <button class="btn btn-primary" type="button" id="osd-full-screen">
          <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
          <span class="sr-only">Full Screen</span>
        </button>
        <button class="btn btn-primary" type="button" id="osd-reset">
          <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
          <span class="sr-only">Reset View</span>
        </button>
      </div>
      <% if @document.public_domain? %>
      <div class="btn-group btn-group-sm" role="group" aria-label="Image download controls">
        <button class="btn btn-primary" type="button" id="download-page" data-iiif-id="<%= iiif_manifest_urls.first %>">
          <span class="glyphicon glyphicon-download" aria-hidden="true"></span>
          Download
          <span class="sr-only">Download</span>
        </button>
      </div>
      <% end %>
      <div class="osd-page-count text-right">
        Page <span id="osd-page-number" class="badge">1</span> of <span class="badge"><%= @document.iiif_ids.length %></span>
      </div>
    </div>
  </div>
    <%= openseadragon_picture_tag(
          iiif_manifest_urls,
          { data: { openseadragon: {
              sequenceMode: true,
              toolbar: 'osd-toolbar',
              zoomInButton: 'osd-zoom-in',
              zoomOutButton: 'osd-zoom-out',
              homeButton: 'osd-reset',
              fullPageButton: 'osd-full-screen',
              nextButton: 'osd-next-page',
              previousButton: 'osd-previous-page',
          }}}
      )
  %>
</div>
